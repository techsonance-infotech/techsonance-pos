generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows", "debian-openssl-3.0.x"]
  output        = "../node_modules/@prisma/client-sqlite"
}

generator client_default {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("SQLITE_DATABASE_URL")
}

// Enums converted to String for SQLite compatibility

// ========== MULTI-TENANT: Company (Tenant) ==========
model Company {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique  // URL-friendly identifier
  logo        String?
  address     String?
  phone       String?
  email       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  stores      Store[]
  users       User[]
  license     License?  // Company-level license
  licenseRequests LicenseRequest[]  // License purchase requests
  supportTickets SupportTicket[] // Support Tickets
  suppliers   Supplier[]
  ingredients Ingredient[]
  customers   Customer[]
  
  @@index([isActive])
  @@index([slug])
}

model Store {
  id        String   @id @default(uuid())
  name      String
  location  String
  tableMode Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Multi-tenant: Store belongs to Company
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)

  supportTickets SupportTicket[] // Support Tickets

  users     User[]   @relation("UserStores")
  
  categories Category[]
  tables     Table[]
  orders     Order[]

  defaultForUsers User[] @relation("DefaultStore")
  inventoryItems  InventoryItem[]
  purchaseOrders  PurchaseOrder[]
  shifts          Shift[]
  floors          Floor[]
  reservations    Reservation[]

  @@index([companyId])
}

model License {
  id          String   @id @default(uuid())
  key         String   @unique // Stores the SIGNED VALIDATION TOKEN or Legacy Token
  keyHash     String?  // SHA-256 hash of the valid Windows-style key (for secure lookup)
  maskedKey   String?  // Masked version of the key (XXXXX-XXXXX-12345) for display
  status      String   @default("ACTIVE") // Enum: ACTIVE, PENDING, EXPIRED, REVOKED
  type        String   @default("PERPETUAL") // Enum: TRIAL, ANNUAL, PERPETUAL
  
  validFrom   DateTime @default(now())
  validUntil  DateTime? // Null for perpetual
  
  maxDevices  Int      @default(1)
  devices     LicenseDevice[]

  // Audit fields
  revokedAt     DateTime?
  revokedBy     String?
  extendedAt    DateTime?
  extendedCount Int      @default(0)

  // License is now linked to Company (not Store)
  companyId   String   @unique
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([type])
}

model LicenseDevice {
  id          String   @id @default(uuid())
  licenseId   String
  license     License  @relation(fields: [licenseId], references: [id], onDelete: Cascade)
  
  fingerprint String
  deviceName  String?
  lastSeen    DateTime @default(now())
  createdAt   DateTime @default(now())

  @@unique([licenseId, fingerprint])
}

// ========== LICENSE REQUEST SYSTEM ==========
model LicenseRequest {
  id            String   @id @default(uuid())
  companyId     String
  company       Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  requestedById String
  requestedBy   User     @relation("LicenseRequestUser", fields: [requestedById], references: [id])
  
  planType      String   // "ANNUAL" or "PERPETUAL"
  planPrice     Float    // 4999 or 9999
  
  status        String   @default("PENDING") // PENDING, PAYMENT_PENDING, PAYMENT_UPLOADED, VERIFIED, COMPLETED, REJECTED
  
  // Payment proof
  paymentScreenshot  String?  // URL to uploaded image
  paymentVerifiedAt  DateTime?
  
  // License key (filled when verified)
  licenseKey    String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  messages      LicenseRequestMessage[]
  
  @@index([companyId])
  @@index([status])
}

model LicenseRequestMessage {
  id            String   @id @default(uuid())
  requestId     String
  request       LicenseRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  
  senderId      String
  sender        User     @relation("LicenseRequestMessages", fields: [senderId], references: [id])
  
  content       String
  attachmentUrl String?  // For images/files
  
  isAdminMessage Boolean @default(false)
  
  createdAt     DateTime @default(now())
  
  @@index([requestId])
}

model SystemConfig {
  key       String   @id
  value     String
  isEnabled Boolean  @default(true)
  updatedAt DateTime @updatedAt
}

model SecurityRule {
  id        String   @id @default(uuid())
  type      String   // Enum: IP, COUNTRY, USER_AGENT
  value     String   @unique
  reason    String?
  createdAt DateTime @default(now())
}

model User {
  id           String      @id @default(uuid())
  username     String      @unique
  email        String      @unique
  contactNo    String?
  password     String
  pin          String?
  role         String      @default("USER") // Enum: SUPER_ADMIN, BUSINESS_OWNER, MANAGER, USER
  tableMode    Boolean?

  // Security & Control
  isLocked        Boolean  @default(false)
  isApproved      Boolean  @default(false) // Track admin approval for new registrations
  isVerified      Boolean  @default(false) // Email verification status
  verificationToken String? // Hashed verification token
  verificationExpiresAt DateTime? // Token expiry
  disabledModules String @default("") // CSV of module IDs e.g. "orders,reports"
  // We must change String[] to String (comma separated) or a separate table.
  
  // Since this is a migration, changing to String and handling split/join in app is easiest for now.
  // But wait, existing code expects array.
  // Prisma + SQLite: "Scalar lists (arrays) are only supported on PostgreSQL, CockroachDB and MongoDB."
  // So we MUST change `disabledModules` to String (JSON or CSV).
  // I will make it String @default("[]") and treat it as JSON in application logic?
  // Or just remove default and make it String? 
  // Let's make it String @default("") for CSV.

  // Multi-tenant: User belongs to Company (null for SUPER_ADMIN = global access)
  companyId   String?
  company     Company? @relation(fields: [companyId], references: [id])

  // Store Relations
  stores         Store[]   @relation("UserStores")
  defaultStoreId String?
  defaultStore   Store?    @relation("DefaultStore", fields: [defaultStoreId], references: [id])

  lastIp          String?  // Track last login IP

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  notifications Notification[]
  orders       Order[]
  backupLogs   BackupLog[]    // Backups triggered by this user
  licenseRequests LicenseRequest[] @relation("LicenseRequestUser")
  licenseRequestMessages LicenseRequestMessage[] @relation("LicenseRequestMessages")
  auditLogs      AuditLog[]
  createdTickets SupportTicket[] @relation("TicketCreator")
  assignedTickets SupportTicket[] @relation("TicketAssignee")
  sentMessages   SupportMessage[] @relation("MessageSender")
  inventoryTransactions InventoryTransaction[]
  createdPurchaseOrders PurchaseOrder[]
  shifts         Shift[]
  overriddenShifts Shift[] @relation("ShiftOverride")
  performedCashTransactions CashTransaction[]

  @@index([companyId])
}

model Table {
  id        String   @id @default(uuid())
  name      String
  capacity  Int      @default(4)
  status    String   @default("AVAILABLE") // Enum: AVAILABLE, OCCUPIED, RESERVED
  orderId   String?  // Added this field as it was referenced in backup.ts but might be virtual in logic? No, backup.ts referenced it. Wait, check original schema.
  // Original schema Table did NOT have orderId?
  // backup.ts: "orderId: t.orderId". 
  // Let's check original schema quickly. It did NOT have orderId.
  // "model Table { ... status TableStatus ... }"
  // The backup.ts code likely assumed it or I misread.
  // Wait, I should not add fields that weren't there unless necessary.
  // I will check backup.ts again later.

  storeId   String
  store     Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)

  // Restaurant Mode
  floorId       String?
  floor         Floor?   @relation(fields: [floorId], references: [id])
  
  x             Int      @default(0)
  y             Int      @default(0)
  width         Int      @default(1)
  height        Int      @default(1)
  shape         String   @default("RECTANGLE") // RECTANGLE, CIRCLE
  
  qrToken       String?  @unique
  reservations  Reservation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
  @@index([floorId])
}

model Notification {
  id        String   @id @default(uuid())
  title     String
  message   String
  type      String?  // SUPPORT, SYSTEM, etc.
  isRead    Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  linkUrl   String?  // e.g. /dashboard/support/tickets/[id]
  metadata  String?  // JSON for additional context
  createdAt DateTime @default(now())

  @@index([userId, isRead])
}

model Order {
  id             String      @id @default(uuid())
  kotNo          String      @unique
  status         String      @default("HELD") // Enum: HELD, COMPLETED, CANCELLED
  fulfillmentStatus String   @default("QUEUED") // Enum: QUEUED, PREPARING, READY, SERVED

  
  totalAmount    Float
  taxAmount      Float       @default(0)
  discountAmount Float       @default(0)
  items          String      // Json is supported in SQLite as String? No, Prisma supports Json on SQLite? YES. Prisma maps Json to TEXT/String automatically.
  // "JSON type is supported in ... SQLite" (Prisma docs)
  paymentMode    String?     // Enum: CASH, CARD, UPI, OTHER
  
  customerName   String?
  customerMobile String?
  
  tableId        String?
  tableName      String?

  customerId     String?
  customer       Customer?   @relation(fields: [customerId], references: [id])
  
  userId         String
  user           User        @relation(fields: [userId], references: [id])

  storeId        String
  store          Store       @relation(fields: [storeId], references: [id], onDelete: Cascade)

  shiftId        String?
  shift          Shift?      @relation(fields: [shiftId], references: [id])
  
  // AI/ML Data Collection: Granular Kitchen Timestamps
  kitchenAcceptedAt DateTime?
  kitchenStartedAt  DateTime?
  kitchenReadyAt    DateTime?
  kitchenServedAt   DateTime?
  
  feedback       Feedback?

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt


  // Indexes for fast queries
  @@index([storeId, status])
  @@index([storeId, createdAt])
}

model Category {
  id        String    @id @default(uuid())
  name      String
  image     String?
  sortOrder Int       @default(0)
  isActive  Boolean   @default(true)
  
  storeId   String
  store     Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)
  
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([storeId])
}

model Product {
  id          String   @id @default(uuid())
  name        String
  price       Float
  description String?
  image       String?
  isAvailable Boolean  @default(true)
  sortOrder   Int      @default(0)
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  addons      Addon[]
  recipeItems RecipeItem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([categoryId])
}

model Addon {
  id          String   @id @default(uuid())
  name        String
  price       Float
  isAvailable Boolean  @default(true)
  sortOrder   Int      @default(0)
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ========== BACKUP MODELS ==========
model BackupLog {
  id            String       @id @default(uuid())
  type          String       // Enum: MANUAL, SCHEDULED
  scope         String       // Enum: FULL, COMPANY
  companyId     String?      // null for FULL backups
  status        String       @default("PENDING") // Enum: PENDING, IN_PROGRESS, COMPLETED, FAILED
  filePath      String?
  fileName      String?
  fileSize      Int?         // bytes
  encryptionKey String?      // for encrypted backups (optional)
  errorMessage  String?
  
  // Triggered by user (for manual backups)
  triggeredById String?
  triggeredBy   User?        @relation(fields: [triggeredById], references: [id])
  
  startedAt     DateTime     @default(now())
  completedAt   DateTime?
  
  @@index([status])
  @@index([companyId])
  @@index([startedAt])
}

model BackupSchedule {
  id            String   @id @default(uuid())
  frequency     String   // daily, weekly, monthly
  time          String   // HH:mm format (e.g., "02:00")
  dayOfWeek     Int?     // 0-6 for weekly (0 = Sunday)
  dayOfMonth    Int?     // 1-31 for monthly
  retentionDays Int      @default(30)
  isEnabled     Boolean  @default(true)
  lastRunAt     DateTime?
  nextRunAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// ========== PASSWORD RESET OTP ==========
model PasswordResetOtp {
  id          String   @id @default(uuid())
  email       String   // User's email
  otpHash     String   // Hashed OTP (bcrypt)
  resetToken  String?  // Secure reset token for password change step
  expiresAt   DateTime // OTP expiry time (5 minutes from creation)
  isUsed      Boolean  @default(false)
  attempts    Int      @default(0) // Failed verification attempts
  createdAt   DateTime @default(now())

  @@index([email])
  @@index([expiresAt])
}

model AuditLog {
  id          String   @id @default(uuid())
  
  // Context
  tenantId    String?  // CompanyId
  storeId     String?  // OutletId
  terminalId  String?
  
  // Actor
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  userRoleId  String?  // Snapshot of role at time of action
  
  // Action
  module      String   // POS, INVENTORY, AUTH, REPORT, SETTINGS
  action      String   // CREATE, UPDATE, DELETE, LOGIN, APPROVE
  entityType  String   // Order, Product, User, Stock
  entityId    String?  // ID of the object changed
  
  // Data Changes (JSON strings for SQLite)
  beforeData  String?  // Snapshot before change
  afterData   String?  // Snapshot after change
  changedFields String? // JSON array of field names ['price', 'stock']
  
  reason      String?
  
  // Traceability
  status      String   @default("SUCCESS") // SUCCESS, FAILURE
  severity    String   @default("LOW")     // LOW, MEDIUM, HIGH, CRITICAL
  
  ipAddress   String?
  userAgent   String?
  deviceId    String?
  
  isSynced    Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([module])
  @@index([action])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@index([storeId])
  @@index([isSynced])
}



model FaqArticle {
  id          String   @id @default(uuid())
  question    String
  answer      String   // Markdown or HTML
  category    String
  isVisible   Boolean  @default(true)
  sortOrder   Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ========== INVENTORY MANAGEMENT (SPRINT 7) ==========

model Supplier {
  id          String   @id @default(uuid())
  name        String
  contactName String?
  email       String?
  phone       String?
  address     String?
  gstNo       String?
  
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  purchaseOrders PurchaseOrder[]
  ingredients    Ingredient[] // Ingredients supplied by this vendor
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([companyId])
  @@unique([companyId, name])
}

model Ingredient {
  id          String   @id @default(uuid())
  name        String
  unit        String   // e.g., kg, ltr, pcs, gm
  costPrice   Float    @default(0) // Standard cost per unit
  minStock    Float    @default(0) // Reorder point
  
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  supplierId  String?
  supplier    Supplier? @relation(fields: [supplierId], references: [id])
  
  inventoryItems InventoryItem[]
  recipeItems    RecipeItem[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([companyId])
  @@index([supplierId])
  @@unique([companyId, name])
}

model InventoryItem {
  id           String     @id @default(uuid())
  quantity     Float      @default(0)
  
  storeId      String
  store        Store      @relation(fields: [storeId], references: [id], onDelete: Cascade)
  
  ingredientId String
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)

  transactions InventoryTransaction[]

  updatedAt    DateTime   @updatedAt

  @@unique([storeId, ingredientId])
}

model RecipeItem {
  id           String     @id @default(uuid())
  productId    String
  product      Product    @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  ingredientId String
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)
  
  quantity     Float      // Quantity of ingredient used per 1 unit of Product
  
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([productId])
}

model InventoryTransaction {
  id              String        @id @default(uuid())
  type            String        // IN, OUT, ADJUSTMENT, WASTAGE
  quantity        Float
  reason          String?
  
  costPerUnit     Float?        // Snapshot of cost at time of transaction
  
  inventoryItemId String
  inventoryItem   InventoryItem @relation(fields: [inventoryItemId], references: [id], onDelete: Cascade)
  
  performedById   String?
  performedBy     User?         @relation(fields: [performedById], references: [id])
  
  referenceId     String?       // ID of Order (for usage) or PO (for purchase)
  
  createdAt       DateTime      @default(now())

  @@index([inventoryItemId])
  @@index([type])
  @@index([createdAt])
  @@index([inventoryItemId, createdAt])
}

model PurchaseOrder {
  id          String    @id @default(uuid())
  poNumber    String    @unique // Auto-generated e.g. PO-1001
  status      String    @default("DRAFT") // DRAFT, SENT, PARTIAL, COMPLETED, CANCELLED
  
  totalAmount Float     @default(0)
  
  supplierId  String
  supplier    Supplier  @relation(fields: [supplierId], references: [id])
  
  storeId     String
  store       Store     @relation(fields: [storeId], references: [id])
  
  createdById String
  createdBy   User      @relation(fields: [createdById], references: [id])
  
  items       PurchaseOrderItem[]
  
  expectedDate DateTime?
  receivedDate DateTime?
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([storeId])
  @@index([supplierId])
  @@index([status])
  @@index([storeId, createdAt])
}

model PurchaseOrderItem {
  id              String        @id @default(uuid())
  purchaseOrderId String
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  
  ingredientId    String
  // We link to Ingredient merely for name/reference, but snapshot data is key
  
  ingredientName  String
  orderedQty      Float
  receivedQty     Float         @default(0)
  unitPrice       Float
  totalPrice      Float
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([purchaseOrderId])
}

// ========== SHIFT MANAGEMENT (SPRINT 8) ==========
model Shift {
  id             String    @id @default(uuid())
  
  storeId        String
  store          Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)
  
  userId         String
  user           User      @relation(fields: [userId], references: [id])
  
  startTime      DateTime  @default(now())
  endTime        DateTime?
  
  openingBalance Float     @default(0)
  closingBalance Float?    // Actual cash count entered by user
  expectedCash   Float?    // System calculated cash
  variance       Float?    // closing - expected
  
  status         String    @default("OPEN") // OPEN, CLOSED
  
  orders         Order[]
  
  // Closing Details
  denominations  String?   // JSON: {"2000": 5, "500": 10}
  closingNotes   String?   // Mandatory if variance exists
  
  // Audits
  overridedById  String?   // Manager who approved variance/override
  overridedBy    User?     @relation("ShiftOverride", fields: [overridedById], references: [id])

  cashTransactions CashTransaction[]
  
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([storeId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model CashTransaction {
  id            String   @id @default(uuid())
  shiftId       String
  shift         Shift    @relation(fields: [shiftId], references: [id], onDelete: Cascade)
  
  type          String   // CASH_IN, CASH_OUT, CASH_DROP, EXPENSE
  amount        Float
  reason        String?
  category      String?  // For expenses: "Fuel", "Supplies"
  
  // Attachments (e.g. receipt photo)
  attachment    String?
  
  performedById String
  performedBy   User     @relation(fields: [performedById], references: [id])
  
  createdAt     DateTime @default(now())
  
  @@index([shiftId])
  @@index([type])
}

// ========== CRM & LOYALTY (SPRINT 11) ==========
model Customer {
  id            String   @id @default(uuid())
  mobile        String
  name          String?
  email         String?
  
  // Loyalty
  loyaltyPoints Int      @default(0)
  totalSpend    Float    @default(0)
  visitCount    Int      @default(0)
  
  // Multi-tenant: Linked to Company (Shared across stores)
  companyId     String
  company       Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  transactions  LoyaltyTransaction[]
  orders        Order[] 
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([companyId, mobile])
  @@index([mobile])
}

model LoyaltyTransaction {
  id          String   @id @default(uuid())
  
  customerId  String
  customer    Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  amount      Int      // Positive for EARN, Negative for REDEEM
  type        String   // EARN, REDEEM, MANUAL_ADJUSTMENT
  
  orderId     String?  // Optional link to order
  
  createdAt   DateTime @default(now())
  
  @@index([customerId])
}

// ========== RESTAURANT MODE (SPRINT 12) ==========
model Floor {
  id        String   @id @default(uuid())
  name      String
  sortOrder Int      @default(0)
  
  storeId   String
  store     Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  
  tables    Table[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
}

model Reservation {
  id             String   @id @default(uuid())
  storeId        String
  store          Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  
  customerName   String
  customerPhone  String
  guests         Int
  reservationTime DateTime
  status         String   @default("PENDING") // PENDING, CONFIRMED, SEATED, NOSHOW, CANCELLED
  
  tableId        String?
  table          Table?   @relation(fields: [tableId], references: [id])
  
  notes          String?
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([storeId, reservationTime])
}

// ========== AI & ANALYTICS (PHASE 1) ==========
model Feedback {
  id        String   @id @default(uuid())
  orderId   String   @unique
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  rating    Int      // 1-5
  comment   String?
  sentiment String?  // POSITIVE, NEUTRAL, NEGATIVE (AI Label)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([rating])
}

// ========== SUPPORT MODULE ==========
model SupportTicket {
  id              String   @id @default(uuid())
  ticketNumber    String   @unique // SS-YYYY-XXXX (Generated by app logic)
  ticketIndex     Int      // Managed by App Logic (Max + 1)
  
  tenantId        String
  company         Company  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  outletId        String?
  store           Store?   @relation(fields: [outletId], references: [id])
  
  createdById     String
  createdBy       User     @relation("TicketCreator", fields: [createdById], references: [id])
  
  assignedToId    String?
  assignedTo      User?    @relation("TicketAssignee", fields: [assignedToId], references: [id])

  subject         String
  category        String   // BILLING, HARDWARE, KDS, INVENTORY, LOGIN, OTHER
  priority        String   // LOW, MEDIUM, HIGH, CRITICAL
  status          String   @default("OPEN") // OPEN, IN_PROGRESS, WAITING_FOR_CUSTOMER, RESOLVED, CLOSED
  channel         String   @default("POS") // POS, ADMIN_PORTAL, EMAIL
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // SLA Fields
  dueAt           DateTime?
  firstResponseAt DateTime?
  resolvedAt      DateTime?
  closedAt        DateTime?
  
  messages        SupportMessage[]
  logs            SupportLog[]
  attachments     SupportAttachment[]

  appVersion      String?
  deviceOS        String?
  ipAddress       String?

  @@index([tenantId])
  @@index([status])
  @@index([assignedToId])
}

model SupportMessage {
  id          String   @id @default(uuid())
  ticketId    String
  ticket      SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  senderId    String
  sender      User     @relation("MessageSender", fields: [senderId], references: [id])
  
  message     String
  isInternal  Boolean  @default(false)
  
  attachments String?  // JSON array of URLs (Simple storage)
  
  createdAt   DateTime @default(now())
  
  @@index([ticketId])
}

model SupportAttachment {
  id          String   @id @default(uuid())
  ticketId    String
  ticket      SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  url         String
  fileName    String?
  fileType    String?
  size        Int?
  
  createdAt   DateTime @default(now())

  @@index([ticketId])
}

model SupportLog {
    id String @id @default(uuid())
    ticketId String
    ticket SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
    
    actorUserId String
    actorRole   String
    
    action String // STATUS_CHANGE, PRIORITY_CHANGE, REPLIED, ASSIGNED
    details String? // JSON or text details of change
    
    createdAt DateTime @default(now())

    @@index([ticketId])
}

