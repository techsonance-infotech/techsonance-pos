generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  BUSINESS_OWNER
  USER
}

model Store {
  id        String   @id @default(uuid())
  name      String
  location  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users     User[]   @relation("UserStores")
  
  categories Category[]
  tables     Table[]
  orders     Order[]

  defaultForUsers User[] @relation("DefaultStore")
}

model User {
  id           String      @id @default(uuid())
  username     String      @unique
  email        String      @unique
  contactNo    String?
  password     String
  pin          String?
  role         Role        @default(USER)
  tableMode    Boolean?

  // Store Relations
  stores         Store[]   @relation("UserStores")
  defaultStoreId String?
  defaultStore   Store?    @relation("DefaultStore", fields: [defaultStoreId], references: [id])

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  notifications Notification[]
  orders       Order[]
}

model Table {
  id        String   @id @default(uuid())
  name      String
  capacity  Int      @default(4)
  status    TableStatus @default(AVAILABLE)

  storeId   String
  store     Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TableStatus {
  AVAILABLE
  OCCUPIED
  RESERVED
}

model Notification {
  id        String   @id @default(uuid())
  title     String
  message   String
  isRead    Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Order {
  id             String      @id @default(uuid())
  kotNo          String      @unique
  status         OrderStatus @default(HELD)
  
  totalAmount    Float
  items          Json
  
  customerName   String?
  customerMobile String?
  
  tableId        String?
  tableName      String?
  
  userId         String
  user           User        @relation(fields: [userId], references: [id])

  storeId        String
  store          Store       @relation(fields: [storeId], references: [id], onDelete: Cascade)
  
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

enum OrderStatus {
  HELD
  COMPLETED
  CANCELLED
}

model Category {
  id        String    @id @default(uuid())
  name      String
  image     String?
  sortOrder Int       @default(0)
  isActive  Boolean   @default(true)
  
  storeId   String
  store     Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)
  
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id          String   @id @default(uuid())
  name        String
  price       Float
  description String?
  image       String?
  isAvailable Boolean  @default(true)
  sortOrder   Int      @default(0)
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  addons      Addon[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Addon {
  id          String   @id @default(uuid())
  name        String
  price       Float
  isAvailable Boolean  @default(true)
  sortOrder   Int      @default(0)
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
