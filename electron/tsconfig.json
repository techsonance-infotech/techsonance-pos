{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "../dist-electron",
        "rootDir": ".",
        "noEmit": false,
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "../node_modules/@types",
            "../node_modules/electron"
        ]
    },
    "include": [
        "."
    ],
    "exclude": [
        "../node_modules"
    ]
}