# ==========================================
# LOCAL DEVELOPMENT ENVIRONMENT (.env.local)
# ==========================================

# Core
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="TechSonance POS (Local)"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Database (Local PostgreSQL)
# Default: postgresql://postgres:postgres@localhost:5432/techsonance_pos
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/techsonance_pos"

# Online Database (For syncing data only)
# Add your Prisma/Cloud DB URL here to enable sync scripts
# ONLINE_DATABASE_URL=""

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="local-dev-insecure-secret"
