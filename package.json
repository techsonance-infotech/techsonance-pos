{
  "name": "techsonance-pos",
  "version": "0.1.0",
  "description": "TechSonance Point of Sale System - A modern POS solution for restaurants and retail",
  "author": "TechSonance InfoTech LLP <contact@techsonance.com>",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "postinstall": "prisma generate",
    "electron": "electron .",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:rebuild": "electron-rebuild -f -w better-sqlite3",
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron:compile && wait-on tcp:3000 && electron .\"",
    "electron:build": "npm run build && npm run electron:compile && electron-builder"
  },
  "build": {
    "appId": "com.techsonance.pos",
    "productName": "TechSonance POS",
    "icon": "public/icon-512.png",
    "files": [
      "dist-electron/**/*",
      ".next/**/*",
      "public/**/*",
      "package.json",
      "prisma/**/*",
      "node_modules/**/*",
      "next.config.ts"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false,
      "icon": "public/icon-512.png"
    },
    "forceCodeSigning": false
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^5.22.0",
    "@prisma/extension-accelerate": "^3.0.1",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "better-sqlite3": "^12.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dexie": "^4.2.1",
    "fs-extra": "^11.3.3",
    "js-cookie": "^3.0.5",
    "lodash": "^4.17.21",
    "lucide-react": "^0.561.0",
    "next": "16.0.10",
    "next-pwa": "^5.6.0",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-hook-form": "^7.68.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "minimatch": "^10.1.1",
    "prisma": "^5.22.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}