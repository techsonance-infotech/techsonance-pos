# ==========================================
# PRODUCTION ENVIRONMENT (.env.prod)
# ==========================================

# Core
NODE_ENV=production
NEXT_PUBLIC_APP_NAME="TechSonance POS"
NEXT_PUBLIC_APP_URL="https://pos.techsonance.com"

# Features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Database (Production Cloud DB)
# Ensure this uses connection pooling URL if on Vercel/Neon
DATABASE_URL="postgres://user:password@prod-db-host:5432/techsonance_pos_prod?sslmode=require"

# Authentication
NEXTAUTH_URL="https://pos.techsonance.com"
# Generate a strong secret: openssl rand -base64 32
NEXTAUTH_SECRET="production-very-secure-random-secret-key"
